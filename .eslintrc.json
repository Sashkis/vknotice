{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["eslint:recommended", "angular"],
    "globals": {
        "chrome": true
    },
    "rules": {
        "angular/di": [2,"array"],
        "angular/controller-name": [2,"/[A-Z].*Ctrl/"],
        "angular/document-service": 0,

        "no-var": "error",
        "comma-dangle": ["error", "always-multiline"],
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
